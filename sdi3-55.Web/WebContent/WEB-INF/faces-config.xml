<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>

	<managed-bean>
		<managed-bean-name>controller</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.BeanUsers</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>user</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.BeanUser</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>settings</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.BeanSettings</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>tareas</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.BeanTasks</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/error.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{login.closeSession}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>alta</from-outcome>
			<to-view-id>/altaForm.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{login.verify}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{login.verify}</from-action>
			<from-outcome>exito_admin</from-outcome>
			<to-view-id>/admin/listado.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{login.verify}</from-action>
			<from-outcome>exito_user</from-outcome>
			<to-view-id>/user/listado_tasks.xhtml</to-view-id>
		</navigation-case>
		
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/admin/listado.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controller.baja(valumno)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/admin/listado.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{controller.baja(valumno)}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/admin/listado.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{settings.resetAndPopolateDB}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/admin/listado.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{settings.resetAndPopolateDB}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/error.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/altaForm.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{register.save}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{register.save}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/altaForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/user/edit_task_page.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{tareas.listadoInboxTasks}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/user/listado_tasks.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tareas.listadoTodayTasks}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/user/listado_tasks.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tareas.listadoWeekTasks}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/user/listado_tasks.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tareas.saveEditedTask}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/user/listado_tasks.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tareas.saveEditedTask}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/error.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/user/listado_tasks.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{tareas.goToEditTask(vtask)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/user/edit_task_page.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tareas.goToEditTask(vtask)}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/error.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tareas.saveTask}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/user/listado_tasks.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tareas.saveTask}</from-action>
			<from-outcome>error</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tareas.listadoCategoryTasks(vcategory)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/user/listado_tasks.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tareas.eliminar(vtask)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/user/listado_tasks.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tareas.finalizar(vtask)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/user/listado_tasks.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{tareas.listadoInboxTasks}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/user/listado_tasks.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
